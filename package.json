{
    "name": "@nodescript/module-generator",
    "version": "1.0.6",
    "description": "Generate NodeScript modules",
    "type": "module",
    "sideEffects": false,
    "exports": {
        ".": "./out/main/index.js"
    },
    "main": "out/main/index.js",
    "types": "out/main/index.d.ts",
    "files": [
        "out/main/**/*"
    ],
    "scripts": {
        "clean": "rm -rf out *.tsbuildinfo",
        "dev": "tsc -b -w",
        "compile": "tsc -b",
        "lint": "eslint --ext=.js,.ts,.vue --cache .",
        "version": "npm run compile",
        "postversion": "npm publish --access=public && git push --tags origin main",
        "generate:development": "NODE_ENV=development node out/main/generate.js",
        "generate:production": "NODE_ENV=production node out/main/generate.js",
        "publish:development": "NODE_ENV=development node out/main/publish.js",
        "publish:production": "NODE_ENV=production node out/main/publish.js"
    },
    "pre-commit": [
        "lint"
    ],
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/nodescript/module-generator.git"
    },
    "keywords": [],
    "author": "Boris Okunskiy",
    "license": "ISC",
    "devDependencies": {
        "@nodescript/eslint-config": "^1.0.3",
        "@types/node": "^16.3.1",
        "eslint": "^8.24.0",
        "pre-commit": "^1.2.2",
        "typescript": "^5.5.2"
    },
    "dependencies": {
        "@nodescript/core": "^7.19.1",
        "@nodescript/errors": "^1.1.4",
        "@nodescript/logger": "^2.0.5",
        "@nodescript/pointer": "^1.8.0",
        "airtight": "^5.7.2",
        "arg": "^5.0.2",
        "camelcase": "^8.0.0",
        "chalk": "^5.3.0",
        "dotenv": "^16.4.5",
        "escape-string-regexp": "^5.0.0",
        "reflect-metadata": "^0.2.2",
        "semver": "^7.6.3",
        "undici": "^6.19.2",
        "yaml": "^2.4.5"
    }
}
